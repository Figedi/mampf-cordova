ons-navigator(ng-controller="ContactListCtrl", var="contactsNav")
  ons-page
    ons-toolbar
      .center Kontakte
      .right
        ons-toolbar-button(ng-click="contactAdd()")
          ons-icon(icon="plus")
    section(style="padding: 8px")
      ons-list
        ons-list-item(ng-repeat="contact in contacts track by $index")
          .listContent(ng-click="editContact($event, contact)")
            | {{contact.displayName}}
          .listIcons
            a(href="tel:{{contact.telephone}}")
              i.fa.fa-border.fa-fw.fa-mobile
            a(ng-click="deleteContact($index, contact)")
              i.fa.fa-border.fa-fw.fa-times

