ons-page.center(ng-controller="ChooseContactCtrl")
  ons-toolbar
    .left
      ons-back-button(ons-if-platform="ios") Zurück
    .center Kontakte auswählen

  section(style="padding: 8px" )
    ons-list
      ons-list-item(ng-repeat="contact in contactsForChoose", ng-class="{ selected: contact.selected }", ng-click="toggleContact(contact)") {{contact.displayName}}
      ons-list-item(ng-hide="contactsForChoose.length")
        .leftIconItem
          ons-icon(icon="frown-o")
        .center
          | Keine Kontakte verfügbar

  section(style="padding: 8px")
    ons-button(modifier="large", ng-click="ons.navigator.popPage();")
      | Fertig
