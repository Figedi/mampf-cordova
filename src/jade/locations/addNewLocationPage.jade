ons-page.center(ng-controller="AddLocationCtrl")
  ons-toolbar
    .left
      ons-back-button(ons-if-platform="ios") Zurück
    .center Neuer Ort
    .right
      ons-toolbar-button(ng-click="refreshPosition()")
          ons-icon(icon="location-arrow")
  ons-row(style="float: center")
    ons-col
      section(id="map")
        ons-row
          div(ui-map="mampfMap", class="map", ui-event="{ 'map-click': 'mapClick($event,$params)' }", ui-options="mapOptions")
        ons-row
          ons-col(align="center")
            br
            label.form-label Name
            input(type="text" style="text-align: center", ng-model="locationModel", class="text-input")


  ons-row(style="padding: 16px 8px 0px")
    ons-col(align="center")
      ons-button(ng-hide="markerExistent()", disabled="true", modifier="large") Kein Marker gefunden
      ons-button(ng-show="markerExistent()", modifier="large", ng-click="addNewLocation() && ons.navigator.popPage();") Hinzufügen
