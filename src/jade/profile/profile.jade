ons-navigator
  ons-page
    ons-toolbar
      .center Profil

    section(style="padding: 8px")
      input(type="text", class="text-input", ng-model="profileName", placeholder="Namen eingeben", style="display: block; width: 100%")
    section(style="padding: 8px")
      input(type="tel", class="text-input", ng-model="profilePhoneNumber", placeholder="Handynummer eingeben", style="display: block; width: 100%")

    .profileButtons
      ons-row(style="padding: 8px")
        ons-col(align="center")
          ons-button(ng-click="ons.navigator.pushPage('partials/profile/showLocationsPage.html', { animation : 'slide' } )")
            ons-icon(icon="map-marker")
            | Orte anzeigen

      ons-row(style="padding: 8px")
        ons-col(align="center")
          ons-button(ng-click="ons.navigator.pushPage('partials/profile/addNewLocationPage.html', { animation : 'slide' } )")
            ons-icon(icon="plus")
