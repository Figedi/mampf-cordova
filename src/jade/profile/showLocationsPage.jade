ons-page.center(ng-controller="ShowLocationsCtrl")
  ons-toolbar
    .center Gespeicherte Orte

  section(style="padding: 8px" )
    div
      ons-row.listRow(ng-repeat="location in locations")
        ons-col(width="80%",ng-class="{testSwipe: showActions}",ng-swipe-right="showActions=true",ng-swipe-left="showActions=false")
          | {{location.locationName}}
        ons-col(width="20%", ng-show="showActions")
          div
            .settingsMenu
              ons-button(modifier="light",ng-click="editLocation(location)")
                ons-icon(icon="gear")
            .settingsMenu
              ons-button(modifier="light",ng-click="deleteLocation($index)")
                ons-icon(icon="times")
      //ons-list
        ons-list-item(class="tappable", modifier="chevron", ng-repeat="location in locations")
          span {{location.locationName}}
  section(style="padding: 8px")
    ons-row
      ons-col(align="center")
        ons-button(ng-click="ons.navigator.popPage();")
